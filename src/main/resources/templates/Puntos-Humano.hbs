    <link href="assets/css/style.css" rel="stylesheet">

</head>

<body>
{{>templates/Navbar}}

<main>
    <div class="container">
        <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-6">
            <div class="container">
                <div class="row justify-content-center">
                    <!-- Columna principal para los puntos y canjes -->
                    <div class="col-lg-6 col-md-8 d-flex flex-column align-items-center justify-content-center">

                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="pt-4 pb-2">
                                    <h5 class="card-title text-center pb-0 fs-4">Beneficios</h5>
                                    <nav>
                                        <ol class="breadcrumb">
                                            <li class="breadcrumb-item"><a href="/">Panel de control</a></li>
                                            <li class="breadcrumb-item active">Beneficios</li>
                                        </ol>
                                    </nav>
                                    <p style="text-align: center;">Consulta tus puntos acumulados y canjealos por los productos o servicios</p>
                                </div>

                                <div class="col-xxl-4 col-md-12">
                                    <div class="card info-card revenue-card">
                                        <div class="card-body">
                                            <h5 class="card-title">Cantidad de puntos</h5>
                                            <div class="d-flex">
                                                <div class="card-icon rounded-circle d-flex justify-content-center">
                                                    <i class="bi bi-gift-fill" style="font-size: 1.5em;"></i>
                                                </div>
                                                <div class="ps-3">
                                                    <h6 style="font-size: 2em; color: green; font-weight: bold;">{{puntaje}}</h6>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <form class="row g-3 needs-validation" novalidate>
                                    <div class="col-12 economico">
                                        <label for="inputState" class="form-label">Canjear por</label>
                                        <select id="inputState" class="form-select">
                                            <option selected>Elegir...</option>
                                            <option value="viaje">VIAJE</option>
                                            <option value="sarten">SARTEN</option>
                                            <option value="otro">etc</option>
                                        </select>
                                    </div>

                                    <div class="col-12">
                                        <button class="btn btn-primary w-100" type="submit">Enviar</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <!-- Columna aparte para la donación de premios -->
                    {{#if (eq tipo_rol "COLABORADOR_JURIDICO")}}
                    <div class="col-lg-4 col-md-8 d-flex flex-column align-items-center justify-content-center">
                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="pt-4 pb-2">
                                    <h5 class="card-title text-center fs-4">¿Desea donar premios?</h5>
                                    <p style="text-align: center;">¡Contribuí a la causa completando nuestro formulario y doná tus premios!</p>
                                </div>

                                <div class="d-grid gap-2 col-8 mx-auto">
                                    <a href="formulario.html" class="btn btn-primary btn-lg">Donar premio</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/if}}
                </div>
            </div>
        </section>
    </div>
</main><!-- End #main -->

<a href="#" class="back-to-top d-flex align-items-center justify-content-center">
    <i class="bi bi-arrow-up-short"></i>
</a>

