<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro Persona Juridica</title>
    <link rel="stylesheet" type="text/css" href="/css/StyleRegistroHumana.css">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet-control-geocoder/dist/Control.Geocoder.css" />
</head>
<body>
<header>
    {{>templates/Navbar}}
</header>
<main>
    <div class="form-container">
        <form id="registroForm" action="/registro/juridica" method="POST">
            <h1>Registrar Persona Jurídica</h1>

            <!-- Fila: Razón Social y Tipo de Persona Jurídica -->
            <div class="row">
                <input type="text" id="razonSocial" name="razonSocial" placeholder="Razón Social" required>
                <input type="text" list="tipoPersonaJuridicaOptions" id="tipoPersonaJuridica" name="tipoPersonaJuridica" placeholder="Tipo de Persona Jurídica">
                <datalist id="tipoPersonaJuridicaOptions">
                    <option value="S.A">
                    <option value="S.R.L.">
                    <option value="S.A.S">
                    <option value="A.C">
                    <option value="Fundacion">
                </datalist>
            </div>

            <!-- Fila: Rubro y Dirección -->
            <div class="row">
                <input type="text" list="rubroOptions" id="rubro" name="rubro" placeholder="Rubro">
                <datalist id="rubroOptions">
                    <option value="Comercio">
                    <option value="Gastronomia">
                    <option value="Servicios">
                    <option value="Industria">
                </datalist>
            </div>
            <div id="contact-fields">
                <div class="row">
                    <input type="text" list="nombreContactoOptions" id="nombreContacto1" name="nombreContacto1" placeholder="Tipo de Medio de Contacto">
                    <datalist id="nombreContactoOptions">
                        <option value="E-MAIL">
                        <option value="WHATSAPP">
                        <option value="TELEFONO LINEA">
                    </datalist>
                    <input type="text" id="contacto1" name="contacto1" placeholder="Dato de Contacto" required>
                </div>
            </div>
            <!-- Botón para agregar más medios de contacto -->
            <button type="button" class="add-contact">Agregar Medio de Contacto</button>

            <!-- Fila: Nombre de Usuario y Contraseña -->
            <div class="row">
                <input type="text" id="nombreUsuario" name="nombreUsuario" placeholder="Nombre de Usuario" required>
                <input type="password" id="password" name="password" placeholder="Contraseña" required>
            </div>
            <span id="username-check-result" style="color: red; display: none;">El nombre de usuario ya existe.</span>
            <input type="hidden" id="lat" name="lat">
            <input type="hidden" id="lng" name="lng">
            <input type="hidden" id="direccion" name="direccion">
            <button type="submit">Crear Persona Jurídica</button>
        </form>
    </div>
    <div id="map" style="height: 400px; width: 50%; float: right;"></div>
</main>
<script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
<script src="https://unpkg.com/leaflet-control-geocoder/dist/Control.Geocoder.js"></script>
<script src="/js/MapaRegistro.js"></script>
<script src="/js/AgregarMedioContacto.js"></script>
<script>
// Validación del formulario
document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('registroForm');
    const usernameInput = document.getElementById('nombreUsuario');
    const passwordInput = document.getElementById('password');

    form.addEventListener('submit', function (event) {
        // Validar nombre de usuario
        const username = usernameInput.value.trim();
        if (!validarUsername(username)) {
            alert('El nombre de usuario no es válido. Debe tener al menos 3 caracteres y solo puede contener letras, números y guiones bajos.');
            event.preventDefault(); // Evita el envío del formulario
            return;
        }

        // Validar contraseña
        const password = passwordInput.value;
        if (!validarPassword(password)) {
            alert('La contraseña debe tener al menos 8 caracteres, incluyendo una letra mayúscula, una letra minúscula y un número.');
            event.preventDefault(); // Evita el envío del formulario
            return;
        }

        // Verificación adicional
        const isUsernameTaken = document.getElementById('username-check-result').style.display === 'block';
        if (isUsernameTaken) {
            event.preventDefault();
            alert('El nombre de usuario ya está en uso.');
            return;
        }

        const direccion = document.getElementById('direccion').value;
        if (!direccion) {
            event.preventDefault();
            alert('Debes ingresar una ubicación en el mapa.');
            return;
        }
    });

    function validarUsername(username) {
        // Nombre de usuario de al menos 3 caracteres, solo letras, números y guiones bajos
        const usernameRegex = /^[a-zA-Z0-9_]{3,}$/;
        return usernameRegex.test(username);
    }

    function validarPassword(password) {
        // Contraseña con al menos 8 caracteres, una mayúscula, una minúscula y un número
        const passwordRegex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)[a-zA-Z\d]{8,}$/;
        return passwordRegex.test(password);
    }

    // Verificación del nombre de usuario
    usernameInput.addEventListener('blur', function () {
        const username = this.value;
        if (username) {
            fetch(`/check-username?username=${username}`)
                .then(response => response.json())
                .then(isAvailable => {
                    const resultElement = document.getElementById('username-check-result');
                    if (!isAvailable) {
                        resultElement.style.display = 'block'; // Muestra mensaje de usuario ya en uso
                    } else {
                        resultElement.style.display = 'none'; // Oculta el mensaje si está disponible
                    }
                });
        }
    });
});
</script>
</body>
</html>
