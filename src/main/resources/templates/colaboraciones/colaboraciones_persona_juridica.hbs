{{#partial "contenido"}}
    <div class="row">
        <div class="col-md-12">
            <div class="form-container bg-white p-4 rounded shadow">
                <h1 class="text-center text-primary">Registrar Colaboraci贸n</h1>

                <!-- Tipo de Colaboraci贸n -->
                <div class="form-group mb-3">
                    <label for="tipoColaboracion">Tipo de Colaboraci贸n</label>
                    <select class="form-control" id="tipoColaboracion" name="tipoColaboracion" required>
                        <option value="">Seleccionar</option>
                        <option value="DINERO">Dinero</option>
                        <option value="HOSTEAR_HELADERA">Hostear Heladera</option>
                        <option value="OFRECER_PREMIOS">Entrega de Tarjetas</option>
                    </select>
                </div>

                <!-- Dinero Form -->
                {{> templates/colaboraciones/formularios/colaboracion_dinero frecuencias=frecuencias}}

                <!-- Entrega Hostear Heladera Form -->
                {{> templates/colaboraciones/formularios/colaboracion_heladera }}

                <!-- Ofrecer Premio Form -->
                {{> templates/colaboraciones/formularios/colaboracion_ofrecer_premio }}
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const tipoColaboracion = document.getElementById('tipoColaboracion');
            const forms = {
                DINERO: document.getElementById('dineroForm'),
                HOSTEAR_HELADERA: document.getElementById('hostearHeladeraForm'),
                OFRECER_PREMIOS: document.getElementById('ofrecerPremioForm')
            };

            tipoColaboracion.addEventListener('change', function () {
                Object.values(forms).forEach(form => form.style.display = 'none');
                if (this.value) {
                    forms[this.value].style.display = 'block';
                }
            });
        });
    </script>
{{/partial}}
