{{#partial "contenido"}}
    <div class="row">
        <div class="col-md-12">
            <div class="form-container bg-white p-4 rounded shadow">
                <h1 class="text-center text-primary">Registrar Colaboración</h1>

                <!-- Tipo de Colaboración -->
                <div class="form-group mb-3">
                    <label for="tipoColaboracion">Tipo de Colaboración</label>
                    <select class="form-control" id="tipoColaboracion" name="tipoColaboracion" required>
                        <option value="">Seleccionar</option>
                        <option value="DINERO">Dinero</option>
                        <option value="DONACION_VIANDAS">Donación de Viandas</option>
                        <option value="REDISTRIBUCION_VIANDAS">Redistribución de Viandas</option>
                        <option value="ENTREGA_TARJETAS">Entrega de Tarjetas</option>
                    </select>
                </div>

                <!-- Dinero Form -->
                    {{> templates/colaboraciones/formularios/colaboracion_dinero}}

                <!-- Donación Viandas Form -->
                    {{> templates/colaboraciones/formularios/colaboracion_vianda}}

                <!-- Redistribución Viandas Form -->
                    {{> templates/colaboraciones/formularios/colaboracion_distribucion}}

                </div>
            </div>
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
        const tipoColaboracion = document.getElementById('tipoColaboracion');
        const forms = {
                DINERO: document.getElementById('dineroForm'),
                DONACION_VIANDAS: document.getElementById('donacionViandasForm'),
                REDISTRIBUCION_VIANDAS: document.getElementById('redistribucionViandasForm'),
                ENTREGA_TARJETAS: null
        };
        tipoColaboracion.addEventListener('change', function () {
            Object.values(forms).forEach(form => {
                if (form) form.style.display = 'none';
            });

              if (this.value === 'ENTREGA_TARJETAS') {
                window.location.href = "/registro/vulnerable";
            }else if (this.value && forms[this.value]) {
                forms[this.value].style.display = 'block';
            }
        });
    });
    </script>
{{/partial}}
{{> templates/base title="Registrar Colaboración"}}
