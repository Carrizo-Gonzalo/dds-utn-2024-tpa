{{#partial "contenido"}}
<main class="container mt-5 pt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="form-container bg-white p-4 rounded shadow">
                <h1 class="text-center text-primary">Reporte de Incidente</h1>
                <form action="/heladeras/{{heladera.id}}/incidente" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="tipoIncidente">Tipo de Incidente</label>
                        <select class="form-control" id="tipoIncidente" name="tipoIncidente" required>
                            <option value="FALLA_TECNICA">Falla Técnica</option>
                            <option value="FALTA_VIANDAS">Falta de Viandas</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="descripcion">Descripción</label>
                        <textarea class="form-control" id="descripcion" name="descripcion" rows="4" required></textarea>
                    </div>
                    <div class="form-group">
                        <label for="fotos">Fotos del Incidente</label>
                        <input type="file" class="form-control-file" id="fotos" name="fotos" accept="image/*" multiple>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Reportar Incidente</button>
                </form>
            </div>
        </div>
    </div>
</main>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
{{/partial}}
{{> templates/base title="REPORTAR INCIDENTE HELADERA"}}
